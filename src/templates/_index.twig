{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("leaplogic\\estimatorwizard\\assetbundles\\estimatorwizard\\EstimatorWizardAsset") %}
{% do view.registerAssetBundle("leaplogic\\estimatorwizard\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/leaplogic/estimator-wizard/estimator-wizard/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Estimator Wizard" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('estimator-wizard') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@leaplogic/estimatorwizard/assetbundles/indexcpsection/dist', true) ~ '/img/Index-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('estimator-wizard') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "Index CP Section body goes here"|t('estimator-wizard') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
